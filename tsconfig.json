{
  "include": ["src"],
  "exclude": ["node_modules", "dist"],

  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",

    "rootDir": "src",
    "outDir": "dist",

    "noEmitHelpers": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true
  }
}